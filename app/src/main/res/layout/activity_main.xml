<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="233dp"
        android:layout_height="287dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="355dp"
        app:srcCompat="@drawable/mainlogo" />

    <TextView
        android:id="@+id/jelajahi"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="346dp"
        android:fontFamily="sans-serif-black"
        android:text="Jelajahi Keindahan Alam Yogyakarta "
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="309dp"
        android:fontFamily="sans-serif"
        android:text="Tersedia informasi lengkap seputar \n aktivitas, fasilitas, lokasi dan banyak lagi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/masukLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="50dp"
        android:width="300dp"
        android:background="@drawable/buttonshape"
        android:text="Masuk" />

    <Button
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="50dp"
        android:width="300dp"
        android:background="@drawable/buttonshape"
        android:text="Daftar" />
</RelativeLayout>